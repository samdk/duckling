= form_for(@activation) do |f|
  - if @activation.errors.any?
    .errors
      %h2= pluralize(@activation.errors.count, 'error')
      %ul
        - @activation.errors.full_messages.each do |msg|
          %li= msg

  .title
    = f.label :title
    = f.text_field :title
  .description
    = f.label :description
    = f.text_field :description
  - if @activation.new_record?
    .subscribers
      - for org in current_user.all_organizations
        .organization-subscription
          = check_box_tag 'activation[organizations][]', org.id
          = f.label org.name
  - else
    .active
      = f.label :active
      = f.check_box :active
  .submit
    = f.submit

