<% @activations.each do |activation| %>
  <tr>
    <td><%= activation.title %></td>
    <td><%= activation.description %></td>
    <td><%= activation.active %></td>
    <td><%= link_to 'Show', activation %></td>
    <td><%= link_to 'Edit', edit_activation_path(activation) %></td>
    <td><%= link_to 'Destroy', activation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

