#panel
  %a.close-button{href:'#'} close
  #invite.panel
    %h1 Invite People
    %form#invite-search
      %input{type: 'text', placeholder: 'search'}
    %form#invite-form
      = submit_tag 'Invite'
      %ul.users
        - Array(@invitees).each do |u|
          - search_text = "#{u.name} #{u.primary_email.email}"
          %li.invitee{'data-search-text' => search_text}
            = check_box_tag "invitees[users][#{u.id}]"
            = label_tag "invitees[users][#{u.id}]", u.full_name

