= content_for :javascripts do
  = javascript_include_tag :activation_page

= content_for :header do
  #current-activation
    %a{href: url_for(@activation)}
      = @activation.title
      &#x25BC;
  %ul#submenu
    %li
      / = link_to image_tag('icons/is_people_16b.png'), '#'    
      = link_to 'manage', '#'
    %li
      / = link_to image_tag('icons/is_settings_16b.png'), '#'
      = link_to 'filter updates', '#'
    %li#new-update-form
      / = link_to image_tag('icons/is_plus_16b.png'), '#'
      = link_to 'post update', '#'
      = render 'form'
      
  / #account-controls
  /   logged in as
  /   %a{href:'#'}= @current_user.full_name
  /   &middot;
  /   %a{href:'#'} log out


= content_for :sidebar do
  %ul
    %li= link_to 'Overview', '/'
    %li= link_to 'My Account', edit_account_path
    %li= link_to 'Log Out', logout_path
    %li#notifications= link_to '3 Notifications', '#'


= content_for :content do
  = render partial: 'layouts/panel', locals: {invitees: @invitees}
  = yield

= render file: 'layouts/application'
