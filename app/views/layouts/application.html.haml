%html
  %head
    %title= content_for?(:title) ? (yield :title) : t('layout.title.default')
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    = javascript_include_tag controller_name
    = yield :javascripts
    = stylesheet_link_tag controller_name
    = csrf_meta_tag
  %body
    - if Rails.env.development?
      %ul#grid-overlay.hide
        %li
        %li
        %li
        %li
        %li
        %li
        %li
        %li
        %li
        %li
        %li
        %li
    #header= yield_if_content_for(:header) or render 'layouts/header'
    #sidebar= yield_if_content_for(:sidebar) or ''
    #content-container
      #content
        #flash
          - unless flash.empty?
            - flash.each do |k, v|
              %div{id: "flash-#{k}"}= v
        = yield_if_content_for(:content) or yield
    #footer
      = link_to 'Help / Support', '#'
