#header
  .wrapper
    - if @current_user
      -# these are spans rather than a list because they're easiest to
      -# style with 'display: inline-block', and IE7 only likes inline
      -# block styling on elements that are inline by default.
      #nav
        %span= link_to 'Overview', '/'
        %span= link_to 'Activations', activations_url
        %span= link_to 'People', users_url
      #account
        %span
          Logged in as
          = link_to @current_user.first_name, edit_account_url
        %span= link_to('Log Out', logout_url, method: :delete)
    - else
      #account
        %span= link_to 'Log In', login_url
